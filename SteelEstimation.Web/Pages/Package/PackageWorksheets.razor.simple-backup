    {
        "ID", "DrawingNumber", "Description", "MaterialId", "Quantity", 
        "Length", "Weight", "TotalWeight", "DeliveryBundle", "UnloadTime",
        "MarkMeasureCut", "QualityCheck", "MoveToAssembly", "MoveAfterWeld", 
