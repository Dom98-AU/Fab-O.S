                                            </td>
                                            <td>
                                                @{
                                                    var actualWeight = processingItems.Where(p => p.PackBundleId == bundle.Id).Sum(p => p.TotalWeight);
                                                }
                                                @actualWeight.ToString("N2") kg
                                            </td>
