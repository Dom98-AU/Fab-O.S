    private DotNetObjectReference<PackageWorksheets>? objRef;
    private Dictionary<string, bool> columnVisibility = new()
    {
        { "ID", true },
        { "DrawingNumber", true },
        { "Description", true },
        { "MaterialId", true },
        { "Quantity", true },
        { "Length", true },
