                                <div class="col-md-4">
                                    <strong>Total Weight:</strong> @GetFilteredPackBundles().Sum(b => processingItems.Where(p => p.PackBundleId == b.Id).Sum(p => p.TotalWeight)).ToString("N2") kg
                                </div>
