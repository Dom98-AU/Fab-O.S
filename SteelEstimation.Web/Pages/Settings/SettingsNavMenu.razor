@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<div class="settings-nav">
    <h6 class="nav-heading">Platform Settings</h6>
    
    <div class="nav-section">
        <div class="nav-section-title">User Management</div>
        <NavLink class="nav-link" href="/admin/users" Match="NavLinkMatch.All">
            <i class="fas fa-users nav-icon"></i>
            <span>Users</span>
        </NavLink>
        <NavLink class="nav-link" href="/admin/invites" Match="NavLinkMatch.All">
            <i class="fas fa-envelope nav-icon"></i>
            <span>Invitations</span>
        </NavLink>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Platform Configuration</div>
        <NavLink class="nav-link" href="/admin/settings" Match="NavLinkMatch.All">
            <i class="fas fa-cogs nav-icon"></i>
            <span>General Settings</span>
        </NavLink>
        <NavLink class="nav-link" href="/admin/environment-status" Match="NavLinkMatch.All">
            <i class="fas fa-server nav-icon"></i>
            <span>Environment Status</span>
        </NavLink>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">Module Management</div>
        <NavLink class="nav-link" href="/settings/modules" Match="NavLinkMatch.All">
            <i class="fas fa-th nav-icon"></i>
            <span>Modules</span>
        </NavLink>
        <NavLink class="nav-link" href="/settings/product-roles" Match="NavLinkMatch.All">
            <i class="fas fa-user-tag nav-icon"></i>
            <span>Module Roles</span>
        </NavLink>
    </div>

    <div class="nav-section">
        <div class="nav-section-title">System</div>
        <NavLink class="nav-link" href="/health" Match="NavLinkMatch.All" target="_blank">
            <i class="fas fa-heartbeat nav-icon"></i>
            <span>Health Check</span>
        </NavLink>
        <NavLink class="nav-link" href="/settings/logs" Match="NavLinkMatch.All">
            <i class="fas fa-file-alt nav-icon"></i>
            <span>System Logs</span>
        </NavLink>
    </div>
</div>

<style>
    .settings-nav {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        height: 100%;
    }

    .nav-heading {
        color: #333;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #dee2e6;
    }

    .nav-section {
        margin-bottom: 1.5rem;
    }

    .nav-section-title {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 0.5rem;
        padding-left: 0.5rem;
    }

    .settings-nav .nav-link {
        display: flex;
        align-items: center;
        padding: 0.5rem 0.75rem;
        margin-bottom: 0.25rem;
        border-radius: 0.25rem;
        color: #495057;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .settings-nav .nav-link:hover {
        background-color: #e9ecef;
        color: #212529;
    }

    .settings-nav .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }

    .settings-nav .nav-icon {
        width: 1.25rem;
        margin-right: 0.5rem;
        text-align: center;
    }
</style>