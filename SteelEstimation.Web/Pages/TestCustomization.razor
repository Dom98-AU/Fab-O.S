@page "/test-customization"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<div class="container-fluid mt-4">
    <h1>Test Avatar Customization</h1>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Simple Test</h3>
            <p>Current Selected Style: @currentStyle</p>
            <button class="btn btn-primary" @onclick="SetTestStyle">Set Style to 'adventurer'</button>
            
            @if (!string.IsNullOrEmpty(currentStyle))
            {
                <div class="mt-3 p-3 bg-info text-white">
                    <p>Style is set! Customization should show.</p>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h3>Enhanced Avatar Selector</h3>
            <p>Selected Style in Component: @selectedStyleInComponent</p>
            <EnhancedAvatarSelector 
                SelectedDiceBearStyle="@currentStyle"
                SelectedDiceBearSeed="test123"
                OnAvatarSelected="HandleAvatarSelection" />
        </div>
    </div>
</div>

@code {
    private string currentStyle = "";
    private string selectedStyleInComponent = "";
    
    private void SetTestStyle()
    {
        currentStyle = "adventurer";
        StateHasChanged();
    }
    
    private void HandleAvatarSelection(SteelEstimation.Web.Components.EnhancedAvatarSelector.AvatarSelectionData data)
    {
        selectedStyleInComponent = data.DiceBearStyle ?? "none";
        Console.WriteLine($"Selected: {data.DiceBearStyle}");
        StateHasChanged();
    }
}