@page "/users"
@attribute [Authorize(Roles = "Administrator,Project Manager")]

<PageTitle>Users - Steel Estimation Platform</PageTitle>

<h1>User Management</h1>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add User
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>admin</td>
                        <td>System Administrator</td>
                        <td>admin@steelestimation.com</td>
                        <td><span class="badge bg-danger">Administrator</span></td>
                        <td><span class="badge bg-success">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary" disabled>Edit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

