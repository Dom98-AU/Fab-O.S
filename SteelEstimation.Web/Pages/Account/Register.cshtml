@page
@model SteelEstimation.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null; // Use custom layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Steel Estimation Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --bs-primary: rgb(13, 26, 128);
            --bs-primary-rgb: 13, 26, 128;
        }
        .btn-primary {
            background-color: rgb(13, 26, 128) !important;
            border-color: rgb(13, 26, 128) !important;
        }
        .btn-primary:hover {
            background-color: rgb(10, 20, 102) !important;
            border-color: rgb(10, 20, 102) !important;
        }
        .register-container {
            display: flex;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .register-left {
            flex: 1;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            overflow-y: auto;
        }
        .register-right {
            flex: 1;
            background: rgb(13, 26, 128);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .register-content {
            width: 100%;
            max-width: 450px;
            margin: 2rem auto;
        }
        .logo-container {
            text-align: center;
        }
        .nwi-logo {
            max-width: 300px;
            width: 100%;
            height: auto;
        }
        @@media (max-width: 768px) {
            .register-container {
                flex-direction: column;
                position: relative;
            }
            .register-right {
                order: -1;
                flex: 0 0 200px;
            }
            .nwi-logo {
                max-width: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-left">
            <div class="register-content">
                <div class="register-brand mb-4">
                    <h1 class="h2 mb-2">Create your account</h1>
                    <p class="text-muted">Join Steel Estimation Platform today</p>
                </div>
                
                @if (Model.EnabledProviders?.Any() == true)
                {
                    <div class="social-register-section mb-4">
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.EnabledProviders)
                            {
                                <form method="post" asp-page-handler="ExternalRegister" asp-route-provider="@provider.ProviderName">
                                    <button type="submit" class="btn btn-outline-secondary btn-lg w-100 d-flex align-items-center justify-content-center gap-2" 
                                            style="@(!string.IsNullOrEmpty(provider.ButtonColor) ? $"border-color: {provider.ButtonColor}; color: {provider.ButtonColor};" : "")">
                                        @if (!string.IsNullOrEmpty(provider.IconClass))
                                        {
                                            <i class="@provider.IconClass"></i>
                                        }
                                        <span>@provider.DisplayName</span>
                                    </button>
                                </form>
                            }
                        </div>
                        
                        <div class="position-relative my-4">
                            <hr class="bg-secondary" />
                            <div class="position-absolute top-50 start-50 translate-middle bg-white px-3">
                                <span class="text-muted">or sign up with email</span>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="register-form">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Input.Username" class="form-label">Username</label>
                                <input asp-for="Input.Username" class="form-control" placeholder="Choose a username" />
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.CompanyName" class="form-label">Company Name</label>
                                <input asp-for="Input.CompanyName" class="form-control" placeholder="Your company name" />
                                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="your@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" class="form-control" placeholder="Create a password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            Create Account
                        </button>
                        
                        <div class="text-center">
                            <span class="text-muted">Already have an account?</span>
                            <a href="/Account/Login" class="text-decoration-none ms-1">Sign in</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="register-right">
            <div class="logo-container">
                <img src="/images/nwi-group-logo-white.png" alt="NWI Group" class="nwi-logo" />
                <div class="mt-4 text-white">
                    <h3>Welcome to Fab.OS</h3>
                    <p class="mb-0">The complete steel fabrication management platform</p>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>