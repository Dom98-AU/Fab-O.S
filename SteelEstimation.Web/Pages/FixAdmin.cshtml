@page
@model SteelEstimation.Web.Pages.FixAdminModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Fix Admin User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Admin User Fix Utility</h2>
        
        @if (Model.Message != null)
        {
            <div class="alert @(Model.Success ? "alert-success" : "alert-danger")">
                @Model.Message
            </div>
        }
        
        <form method="post">
            <button type="submit" class="btn btn-primary">Fix Admin User</button>
        </form>
        
        @if (Model.Success)
        {
            <div class="mt-3">
                <h4>Login Credentials:</h4>
                <p>Email: <strong>admin@steelestimation.com</strong></p>
                <p>Password: <strong>Admin@123</strong></p>
                <a href="/Account/Login" class="btn btn-success">Go to Login</a>
            </div>
        }
    </div>
</body>
</html>