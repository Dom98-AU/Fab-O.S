@using Microsoft.AspNetCore.Components.Web
@namespace SteelEstimation.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Steel Estimation Platform</title>
    <base href="~/" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="css/site.css?v=12" />
    <style>
        :root {
            --bs-primary: rgb(13, 26, 128);
            --bs-primary-rgb: 13, 26, 128;
        }
        .btn-primary {
            background-color: rgb(13, 26, 128) !important;
            border-color: rgb(13, 26, 128) !important;
        }
        .btn-primary:hover {
            background-color: rgb(10, 20, 102) !important;
            border-color: rgb(10, 20, 102) !important;
        }
        .bg-primary {
            background-color: rgb(13, 26, 128) !important;
        }
    </style>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <script src="_framework/blazor.server.js"></script>
    <script>
        // Early initialization of safeCall to prevent errors before site.js loads
        window.safeCall = window.safeCall || function(functionName, ...args) {
            console.warn('safeCall: ' + functionName + ' not yet available, will be called when ready');
            return undefined;
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="js/site.js?v=4"></script>
    <script src="js/table-resize.js?v=5"></script>
    <script src="js/simple-resize.js?v=3"></script>
    <script src="js/clipboard.js?v=2"></script>
    <script src="js/clipboard-paste.js?v=1"></script>
    <script src="js/inactivity-monitor.js?v=2"></script>
    <script src="js/dashboard-charts.js?v=2"></script>
    <script src="js/undo-redo.js?v=2"></script>
    <script src="js/column-reorder.js?v=2"></script>
    <script src="js/enhanced-table.js?v=9"></script>
    <script src="js/toast.js?v=1"></script>
    <script src="js/bundle-drag.js?v=2"></script>
    <script src="js/timeAnalytics.js?v=1"></script>
    <script src="js/estimation-summary-charts.js?v=1"></script>
</body>
</html>